<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="hackathon.co.kr.ui.activity.SubmitCompleteActivity">

    <androidx.appcompat.widget.Toolbar
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:background="@color/color_3440ff"
            android:layout_height="?attr/actionBarSize">

        <TextView
                android:id="@+id/tv_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:text="제출 완료"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:paddingTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#de000000"
                android:lineSpacingExtra="4sp"
                android:gravity="center_horizontal"
                tools:text=" 당신의 멋진 글에 박수를!"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/user_quiz_image"
                    android:layout_width="177dp"
                    android:layout_height="206dp"
                    android:layout_marginTop="26dp"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_check"/>
        </RelativeLayout>

        <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                tools:text="IELTS Writing Sample #189"/>
        <TextView
                android:id="@+id/tv_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                tools:text="Task2 - boys and girls"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_timer"/>

            <TextView
                    android:id="@+id/tv_consume_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#de000000"
                    android:lineSpacingExtra="0sp"
                    tools:text="소요시간: 25분 20초"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/ll_comback"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/color_3440ff"
            android:layout_marginBottom="16dp">

    <TextView
            android:id="@+id/tv_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="돌아가기"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
